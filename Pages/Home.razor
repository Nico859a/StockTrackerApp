@page "/"
@using StockQuotesApp.Components

<PageTitle>Home</PageTitle>

<div class="home-container">
    <h1 class="welcome-message">Hello, Traders!</h1>

    <div class="stock-indices">
        <StockIndicesComponent />
    </div>

    <div class="alert alert-warning" role="alert">
        Stay updated with the latest market trends!
    </div>
</div>

<style>
    .home-container {
        max-width: 1200px; /* Maximum width for the content */
        margin: 0 auto; /* Centering the container */
        padding: 20px; /* Padding around the content */
        background-color: #ffffff; /* White background for clarity */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        display: flex; /* Flexbox for alignment */
        flex-direction: column; /* Column layout */
        align-items: center; /* Center items horizontally */
    }

    .welcome-message {
        font-size: 2.5em; /* Larger font for emphasis */
        font-weight: 600; /* Semi-bold for better visibility */
        color: #2c3e50; /* Darker text color */
        text-align: center; /* Centered text */
        margin-bottom: 30px; /* Space below the heading */
    }

    .stock-indices {
        margin: 20px 0; /* Margin around the stock indices */
        display: flex; /* Flexbox for responsive layout */
        justify-content: center; /* Center items in the container */
        flex-wrap: wrap; /* Wrap items if needed */
        width: 100%; /* Ensure full width for stock indices */
    }

    .alert {
        font-size: 1.1em; /* Slightly larger font for alerts */
        text-align: center; /* Center the alert message */
        margin-top: 30px; /* Space above the alert */
        padding: 15px; /* Padding inside the alert */
        border-radius: 5px; /* Rounded corners for the alert */
        background-color: #fff3cd; /* Light background for alerts */
        color: #856404; /* Darker text color for visibility */
    }
</style>
