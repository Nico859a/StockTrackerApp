@inherits LayoutComponentBase

<div class="sidebar">
    <h1>Stock Tracking App</h1>
    <nav>
        <ul>
            <li><a href="/">🏠 Home</a></li>
            <li><a href="/auth">🔑 Login/Register</a></li>
            <li><a href="/stocks">📈 Stock Quotes</a></li>
            <li><a href="/live-stock-chart">📊 Live Stock Chart</a></li>
        </ul>
    </nav>
</div>

<div class="main">
    @Body
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7f9;
        margin: 0;
    }

    .sidebar {
        width: 250px;
        background-color: #2c3e50; /* Darker background for a modern look */
        color: white;
        float: left;
        padding: 30px 20px; /* Increased padding for a cleaner look */
        height: 100vh; /* Full height */
        box-shadow: 4px 0 15px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
        position: fixed; /* Fixed sidebar */
        transition: width 0.3s; /* Smooth transition */
    }

        .sidebar h1 {
            font-size: 1.8em; /* Slightly smaller font size for elegance */
            font-weight: normal; /* Normal weight for a clean look */
            margin-bottom: 30px; /* Space below header */
            text-align: center; /* Centered text */
            color: #ffffff; /* White color for visibility */
            padding: 10px 0; /* Vertical padding for spacing */
            border-bottom: 2px solid #34495e; /* Subtle border for separation */
        }

    nav ul {
        list-style-type: none;
        padding: 0;
    }

        nav ul li {
            margin: 15px 0; /* Space between menu items */
        }

            nav ul li a {
                text-decoration: none;
                color: #ffffff;
                padding: 12px 15px; /* Increased padding for better touch targets */
                display: block;
                border-radius: 8px; /* Rounded corners */
                transition: background 0.3s, transform 0.3s; /* Smooth transition for hover effects */
            }

                nav ul li a:hover {
                    background-color: #34495e; /* Slightly lighter background on hover */
                    transform: translateY(-2px); /* Slight lift effect on hover */
                }

    .main {
        margin-left: 280px; /* Increased margin to fit sidebar */
        padding: 20px;
        overflow: auto; /* Prevent content overflow */
        height: 100vh; /* Full height for the main content */
        position: relative; /* Positioning context for child elements */
        transition: margin-left 0.3s; /* Smooth transition for main content */
    }
</style>
